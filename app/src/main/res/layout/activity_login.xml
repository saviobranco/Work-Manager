<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ourapp.com.example.work.ouraplication.Login"
    android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botaoUsuario"
            android:text="@string/botaoUsuario"
            android:onClick="selecionaUsuario" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botaoAdm"
            android:text="@string/botaoAdm"
            android:onClick="selecionaAdm" />

</LinearLayout>
